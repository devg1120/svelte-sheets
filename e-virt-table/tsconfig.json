{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true, // 使用定义字段初始化程序语法
    "module": "ESNext", // 指定生成哪个模块系统代码
    "outDir": "./dist/lib", // 输出声明文件的目录
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // "emitDeclarationOnly": true, // 只生成声明文件，而不编译 JavaScript 代码
    "skipLibCheck": true, // 跳过声明文件检查
    "declaration": true, // 生成声明文件
    "sourceMap": true, // 成调试用的 source map 文件
    "esModuleInterop": true, // ES模块和CommonJS互操作
    /* Bundler mode */
    "moduleResolution": "node", // 指定模块解析策略
    "isolatedModules": true, // 将每个文件做为单独的模块
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
